{
  "name": "tizko-api",
  "version": "1.0.0",
  "description": "A RESTful API for Tizko Online Groceries",
  "main": "server.js",
  "scripts": {
    "start": "node ./server.js",
    "dev": "cross-env NODE_ENV=development nodemon ./server.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=development jest --watch --detectOpenHandles",
    "seed": "cross-env NODE_ENV=development node ./seeders/seed.js -i",
    "seed:delete": "cross-env NODE_ENV=development node ./seeders/seed.js -d",
    "seed:test": "cross-env NODE_ENV=test node ./seeders/seed.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "mongoose"
  ],
  "author": "Patrick Castro",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-sslify": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.9",
    "mongoose": "^5.9.20",
    "mongoose-deep-populate": "^3.2.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.10",
    "rootpath": "^0.1.2",
    "swagger-ui-express": "^4.1.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "faker": "^4.1.0",
    "jest": "^26.4.2",
    "mongo-seeding": "^3.4.1",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
